# creations of mine
function title() { echo -ne "\e]1;$1\a" ;}

# other ppl's creations
function pyfind () {
	    if [ -n $1 ]
			    then
				        find . -name '*.py' -print | xargs grep -ni $1
						    else
								        echo "A pattern is required"
										    fi
}

